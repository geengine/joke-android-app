<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar"
    style="@style/titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height" >

    <ImageButton
        android:id="@+id/titlebar_app_icon"
        style="@style/titlebar_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/app_icon_with_back" />

    <TextView
        android:id="@+id/titlebar_text"
        style="@style/titlebar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/titlebar_ref"
        android:layout_toRightOf="@id/titlebar_app_icon"
        android:paddingLeft="5dp"
        android:text="@string/app_name" />

    <ImageButton
        android:id="@+id/titlebar_ref"
        style="@style/titlebar_app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/spin" />

    <ProgressBar
        android:id="@+id/titlebar_progress"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:padding="0dp" />

</RelativeLayout>