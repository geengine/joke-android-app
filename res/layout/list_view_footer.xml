<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/refresh_bg"
    android:padding="10dp" >

    <ProgressBar
        android:id="@+id/list_footer_progressbar"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp" />

    <TextView
        android:id="@+id/list_footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/list_footer_progressbar"
        android:text="@string/hint_list_footer"
        android:textColor="@color/txtv_white" />

</RelativeLayout>