<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- start action bar -->
    <style name="MyAppTheme" parent="@style/Theme.AppCompat.CustomPtrHeader"></style>

    <style name="Theme.AppCompat.CustomPtrHeader" parent="Theme.AppCompat">
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
        <item name="actionBarStyle">@style/Widget.Custom.ActionBar</item>
    </style>

    <style name="Widget.Custom.ActionBar" parent="@style/Widget.AppCompat.Base.ActionBar">
        <item name="background">@drawable/action_bar_bg</item>
        <item name="android:background">@drawable/action_bar_bg</item>
    </style>

    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <item name="ptrHeaderBackground">@color/action_bar_bg</item>

        <!-- This is commented out as you should not set this unless you know what you're doing -->
        <!-- <item name="ptrHeaderHeight"></item> -->

        <item name="ptrHeaderTitleTextAppearance">@style/TextAppearance.Custom.PtrHeader.Title</item>
        <item name="ptrProgressBarStyle">inside</item>
        <item name="ptrProgressBarColor">@android:color/black</item>
        <item name="ptrPullText"></item>
        <item name="ptrRefreshingText">Pulling down the internet</item>
        <item name="ptrReleaseText">Let go if you want me to refresh!</item>
    </style>

    <style name="TextAppearance.Custom.PtrHeader.Title" parent="android:TextAppearance.Large.Inverse">
        <item name="android:textSize">@dimen/txt_title_size</item>
    </style>
    <!-- /end action bar -->
    <style name="custom_window_title_background">
        <item name="android:background">@drawable/title</item>
    </style>

    <style name="custom_title">
        <item name="android:windowTitleSize">36dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/custom_window_title_background</item>
    </style>

    <style name="titlebar">
        <item name="android:background">@color/titlebar_bg</item>
    </style>

    <style name="titlebar_text">
        <item name="android:textColor">@color/titlebar_txt_color</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="txt_joke_title">
        <item name="android:textColor">@color/text_joke_title</item>
        <!-- <item name="android:background">@color/page_bg</item> -->
        <item name="android:paddingBottom">@dimen/jokerow_padding</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="txt_joke_content">
        <item name="android:textColor">@color/text_joke_content</item>
        <item name="android:paddingTop">@dimen/jokerow_padding</item>
        <item name="android:background">@drawable/joke_content_bg</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="base_titlebar_icon">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="titlebar_icon" parent="base_titlebar_icon">
        <item name="android:paddingLeft">3dp</item>
    </style>

    <style name="titlebar_app_icon" parent="base_titlebar_icon">
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="textview">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="btn">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
    </style>

    <style name="btn_reply" parent="btn">
        <item name="android:background">@drawable/btn_reply_background</item>
    </style>

    <style name="edit_text">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="joke_operate">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/joke_operate_bg</item>
    </style>

    <style name="joke_operate_btn">
        <item name="android:padding">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/txt_default</item>
        <item name="android:text">@string/def_num</item>
    </style>

</resources>